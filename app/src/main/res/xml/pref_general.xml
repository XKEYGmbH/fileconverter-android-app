<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="server_url"
        android:title="@string/pref_server_url"
        android:defaultValue="@string/pref_default_server_url"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:capitalize="none"
        android:singleLine="true"
        android:textIsSelectable="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="username"
        android:title="@string/pref_username"
        android:defaultValue="@string/pref_default_username"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="password"
        android:title="@string/pref_password"
        android:defaultValue="@string/pref_default_password"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="none"
        android:singleLine="true"
        android:password="true"
        android:maxLines="1" />
</PreferenceScreen>
